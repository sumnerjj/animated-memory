<p id="notice"><%= notice %></p>
<h1>Articles</h1>

<%= link_to 'Create a new Article', new_article_path %>

    <% @articlesdict.each do |article| %>
	      <h3 class=atitle > <%= article[:article_record].title %> </h3> 
	      <%= link_to 'Details', article[:article_record] %>
	      <br>
	      <div class=abody>	<%= article[:article_record].body %> </div>
			      <br>
			      Tags: <%= raw article[:article_record].tags.map(&:name).map { |t| link_to t, articles_path( tag: t) }.join(', ') %>
		      <br>
		      Recent comments:
		      <br>		      
			      <% article[:comments].each do |c| %>
				      "<%= c.body %>"
				      <br>
			      <% end %>
        <% link_to 'Edit', edit_article_path(article[:article_record]) %>
        <% link_to 'Destroy', article[:article_record], method: :delete, data: { confirm: 'Are you sure?' } %>
    <% end %>

<br>


